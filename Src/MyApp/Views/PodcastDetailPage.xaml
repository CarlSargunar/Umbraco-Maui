<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyApp.Views.PodcastDetailPage"
             xmlns:viewmodel="clr-namespace:MyApp.ViewModels"
             x:DataType="viewmodel:PodcastDetailsViewModel">
    <StackLayout Padding="20">
        <Image Source="{Binding Podcast.MainImage}" WidthRequest="200" HeightRequest="200" />
        <Label Text="{Binding Podcast.Name}" />
        <Label Text="{Binding Podcast.Author}" />
        <Label Text="{Binding Podcast.Summary}" />
    </StackLayout>
</ContentView>
