<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyApp.Views.ArticleDetailPage"
             xmlns:viewmodel="clr-namespace:MyApp.ViewModels"
             x:DataType="viewmodel:ArticleDetailsViewModel">
    <StackLayout Padding="20">
        <Image Source="{Binding Article.MainImage}" WidthRequest="200" HeightRequest="200" />
        <Label Text="{Binding Article.Name}" />
        <Label Text="{Binding Article.Author}" />
        <Label Text="{Binding Article.Summary}" />
    </StackLayout>
</ContentPage>