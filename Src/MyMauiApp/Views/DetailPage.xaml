<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyMauiApp.Views.DetailPage"
             xmlns:viewmodel="clr-namespace:MyMauiApp.ViewModels"
             x:DataType="viewmodel:ProductDetailViewModel">
    <StackLayout Padding="20">
        <Image Source="{Binding Product.Image}" WidthRequest="200" HeightRequest="200" />
        <Label Text="{Binding Product.Name}" />
        <Label Text="{Binding Product.FormattedPrice}" />
        <Label Text="{Binding Product.Description}" />
    </StackLayout>
</ContentPage>